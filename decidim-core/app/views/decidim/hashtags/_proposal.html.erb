<div class="column">
  <article class="card card--proposal">
    <div class="card__content">
      <div class="card__header">
        <%#= link_to decidim_proposals.proposal_path(resource) do%>
          <h5 class="card__title"><%= resource.title %></h5>
        <%# end %>
        <div class="card__author author-data author-data--small">
          <%= render partial: "decidim/shared/author_reference", locals: { author: present(resource).author } %>
        </div>
        <div class="tech-info tech-info--text-left">
          <%#= t(".creation_date", date: l(resource.created_at, format: :decidim_short)) %>
        </div>
        <%#= feature_reference(resource, class: "tech-info--text-left") %>
      </div>
      <%#= render partial: "proposal_badge", locals: { proposal: resource } %>
      <p><%= truncate(resource.body, length: 100) %></p>
      <%#= render partial: "decidim/shared/tags", locals: { resource: resource, tags_class_extra: "tags--proposal" } %>
    </div>
    <div class="card__footer">
      <div class="card__support">
        <%# if current_settings.votes_enabled? %>
          <%#= render partial: "votes_count", locals: { proposal: resource, from_proposals_list: true } %>
          <%#= render partial: "vote_button", locals: { proposal: resource, from_proposals_list: true } %>
        <%# else %>
          <div class="card__support__data"></div>
          <%#= link_to t(".view_proposal"), resource, class: "card__button button small secondary" %>
        <%# end %>
      </div>
    </div>
  </article>
</div>
