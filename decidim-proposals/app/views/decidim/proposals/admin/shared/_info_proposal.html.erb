<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "#{t ".proposals"} > ", proposals_path %>
      <%= proposal.title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <% renderer = Decidim::ContentRenderers::HashtagRenderer.new(proposal.body)%>
      <strong><%= t ".body" %>: </strong><%= renderer.render.html_safe %>
    </div>
    <div class="row column">
      <strong><%= t ".created_at" %>: </strong> <%= l proposal.created_at, format: :decidim_short  %>
    </div>
    <div class="row column">
      <strong><%= t ".proposal_votes_count" %>: </strong> <%= proposal.proposal_votes_count %>
    </div>
  </div>
</div>
